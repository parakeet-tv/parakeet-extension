{
  "name": "parakeet-tv",
  "displayName": "parakeet.tv",
  "description": "Share your code with the world",
  "version": "0.0.1",
  "publisher": "parakeet-tv",
  "type": "commonjs",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Chat",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onUri"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "parakeet-tv.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "parakeet-tv.statusBarClick",
        "title": "Parakeet Status Bar Click"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "parakeetTv",
          "title": "Parakeet.tv",
          "icon": "resources/favicon.svg"
        }
      ],
      "panel": [
        {
          "id": "parakeetChat",
          "title": "Stream Chat",
          "icon": "resources/favicon.svg"
        }
      ]
    },
    "views": {
      "parakeetTv": [
        {
          "id": "parakeet.mainView",
          "name": "Parakeet.tv",
          "type": "webview"
        }
      ],
      "parakeetChat": [
        {
          "id": "parakeet.chatView",
          "name": "Chat",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "dependencies": {
    "jose": "^6.1.0",
    "parakeet-proto": "git+ssh://git@github.com/parakeet-tv/parakeet-proto.git#v0.14.0",
    "partysocket": "^1.1.5",
    "yjs": "^13.6.27",
    "zod": "^4.1.5"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.50.1"
  }
}
